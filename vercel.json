{
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/bus/(.*)",
      "destination": "https://luxetravel-server1.vercel.app/api/bus/$1"
    },
    {
      "source": "/api/food/(.*)",
      "destination": "https://luxetravel-server2.vercel.app/api/food/$1"
    }
  ]
}
